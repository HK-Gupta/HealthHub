<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fitness"
    android:background="@color/black">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/text_background"
                android:padding="7dp"
                android:text="Fill Up the Following Details to Check Fitness Level."
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="@drawable/text_background"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Gender"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="4dp"
                    android:textSize="18sp"
                    android:padding="7dp"
                    android:textColor="@color/white"/>
                <RadioGroup
                    android:id="@+id/radioGroup1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/genderButtonMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Male" />


                    <RadioButton
                        android:id="@+id/genderButtonFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Female"
                        android:layout_marginRight="19dp"/>


                </RadioGroup>
            </LinearLayout>

            <EditText
                android:id="@+id/age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="@drawable/text_background"
                android:hint="Age"
                android:inputType="numberDecimal"
                android:padding="7dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/textGrey"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="@drawable/text_background"
                android:hint="Height (cm)"
                android:inputType="numberDecimal"
                android:padding="7dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/textGrey"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="@drawable/text_background"
                android:hint="Weight (Kg)"
                android:inputType="numberDecimal"
                android:padding="7dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/textGrey"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/body_fat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="@drawable/text_background"
                android:hint="Body Fat Percentage"
                android:inputType="numberDecimal"
                android:padding="7dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/textGrey"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/diastolic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="@drawable/text_background"
                android:hint="Diastolic Pressure"
                android:inputType="numberDecimal"
                android:padding="7dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/textGrey"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/systolic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="@drawable/text_background"
                android:hint="Systolic Pressure"
                android:inputType="numberDecimal"
                android:padding="7dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/textGrey"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/grip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="@drawable/text_background"
                android:hint="Grip Strength"
                android:inputType="numberDecimal"
                android:padding="7dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/textGrey"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/bending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="@drawable/text_background"
                android:hint="Sit and Bend Froward (cm)"
                android:inputType="numberDecimal"
                android:padding="7dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/textGrey"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/sit_ups"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="@drawable/text_background"
                android:hint="Sit-ups Count"
                android:inputType="numberDecimal"
                android:padding="7dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/textGrey"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/broad_jump"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="@drawable/text_background"
                android:hint="Broad Jump"
                android:inputType="numberDecimal"
                android:padding="7dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/textGrey"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_predict"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:background="@drawable/btn_background"
                android:text="Predict"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text_result"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/text_background"
                android:padding="7dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="21sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/progress_background"
        android:padding="4dp"
        android:layout_margin="18dp"
        android:orientation="vertical">

        <ProgressBar
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Wait.."
            android:textSize="25dp"
            android:textColor="@color/black"
            android:textAlignment="center"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>