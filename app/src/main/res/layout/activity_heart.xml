<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Heart"
    android:background="@color/black">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/text_background"
                android:padding="7dp"
                android:text="Fill Up the Following Details."
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="@drawable/text_background"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Gender"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="4dp"
                    android:textSize="18sp"
                    android:padding="7dp"
                    android:textColor="@color/white"/>
                <RadioGroup
                    android:id="@+id/radioGroup1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/genderButtonMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Male" />


                    <RadioButton
                        android:id="@+id/genderButtonFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Female"
                        android:layout_marginRight="19dp"/>


                </RadioGroup>
            </LinearLayout>

            <EditText
                android:id="@+id/age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="@drawable/text_background"
                android:hint="Age"
                android:inputType="numberDecimal"
                android:padding="7dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/textGrey"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/chestPain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="@drawable/text_background"
                android:hint="Chest Pain Type"
                android:inputType="numberDecimal"
                android:padding="7dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/textGrey"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/blood_resting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="@drawable/text_background"
                android:hint="Blood Pressure (Resting)"
                android:inputType="numberDecimal"
                android:padding="7dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/textGrey"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/cholesterol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="@drawable/text_background"
                android:hint="Cholesterol Level"
                android:inputType="numberDecimal"
                android:padding="7dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/textGrey"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/blood_fasting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="@drawable/text_background"
                android:hint="Blood Pressure (Fasting)"
                android:inputType="numberDecimal"
                android:padding="7dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/textGrey"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/ecg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="@drawable/text_background"
                android:hint="ECG"
                android:inputType="numberDecimal"
                android:padding="7dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/textGrey"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/heart_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="@drawable/text_background"
                android:hint="Maximum Heart Rate Achieved"
                android:inputType="numberDecimal"
                android:padding="7dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/textGrey"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/exercise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="@drawable/text_background"
                android:hint="Exercise Induced Angina"
                android:inputType="numberDecimal"
                android:padding="7dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/textGrey"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/old_peak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="@drawable/text_background"
                android:hint="ST-Segment depression"
                android:inputType="numberDecimal"
                android:padding="7dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/textGrey"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/slope"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="@drawable/text_background"
                android:hint="Slope of Peak exercise ST segment."
                android:inputType="numberDecimal"
                android:padding="7dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/textGrey"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/caa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="@drawable/text_background"
                android:hint="No. vessels(0-3) colored by fluoroscopy."
                android:inputType="numberDecimal"
                android:padding="7dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/textGrey"
                android:textSize="18sp" />
            <EditText
                android:id="@+id/stress_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="@drawable/text_background"
                android:hint="Thallium stress test "
                android:inputType="numberDecimal"
                android:padding="7dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/textGrey"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_predict"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:background="@drawable/btn_background"
                android:text="Predict"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text_result"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/text_background"
                android:padding="7dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>